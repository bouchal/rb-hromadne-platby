{
  "manifest_version": 3,
  "name": "RB Hromadn√© platby",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "./icon.png",
    "48": "./icon.png",
    "128": "./icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    }
  },
  "host_permissions": [
    "https://online.rb.cz/web/#/payments/batches/new/dpo"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://online.rb.cz/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
