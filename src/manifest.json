{
  "manifest_version": 3,
  "name": "RB Hromadné platby",
  "description": "Rozšíření umožňuje snadné hromadné zadávání plateb do internetového bankovnictví Raiffeisenbank.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ],
  "icons": {
    "16": "./icon.png",
    "48": "./icon.png",
    "128": "./icon.png",
    "512": "./icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png",
      "512": "./icon.png"
    }
  },
  "host_permissions": [
    "https://online.rb.cz/web/#/payments/batches/new/dpo"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://online.rb.cz/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vzor.xlsx"],
      "matches": ["<all_urls>"]
    }
  ]
}
